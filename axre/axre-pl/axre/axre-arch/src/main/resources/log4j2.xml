<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="com.concept.ruleengine" level="trace" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="test.craps.ruleengine" level="trace" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="craps.ingrate.ruleengine" level="trace"
			additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Root level="debug">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>