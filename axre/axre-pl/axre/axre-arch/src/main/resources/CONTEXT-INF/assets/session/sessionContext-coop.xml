<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd ">

	<!-- Initialization for data source -->
	<bean id="coopSession" class="com.concept.ruleengine.session.KnowledgeSessionImpl">
		<property name="lsDrools" ref="cooplocationFile" />
		<property name="reference" ref="rmsReference" />
		<property name="mapper" ref="xlsQueryMapper" />
		<property name="decisionTable" ref="xlsDecisionTable" />
	</bean>

	<bean id="cooplocationFile" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<value>/assets/axre/apii/rule/coop/_xrasset_co__prime.drl</value>
				<value>/assets/axre/apii/rule/coop/_xrasset_co_input_validity.drl</value>
				<value>/assets/axre/apii/rule/coop/_xrasset_co_single_validation.drl</value>
				<value>/assets/axre/apii/rule/coop/_xrasset_co_single_allocation.drl</value>
				<value>/assets/axre/apii/rule/coop/_xrasset_co_bulk_allocation.drl</value>
			</list>
		</constructor-arg>
	</bean>
</beans>